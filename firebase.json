{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "hosting": {
        "source": ".",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "cleanUrls": true,
        "trailingSlash": true,
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "frameworksBackend": {
            "region": "us-central1"
        }
    }
}