rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Drops: Public read, NO client writes (all writes via Admin SDK)
    match /drops/{dropId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Users: Authenticated read only, NO client writes (all writes via Admin SDK)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Transactions: Authenticated read only, NO client writes
    match /transactions/{transactionId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Notifications: Authenticated read only, NO client writes
    match /notifications/{notificationId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
